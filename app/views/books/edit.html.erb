<div class="form-box">
  <h1>Editing Book</h1>
  <%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

  <div class="title-box">
    <h4 class="title-form">Title</h4>
    <%= f.text_field :title %>
  </div>
  
  <div class="body-box">
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>
  
  <div class="submit">
    <%= f.submit 'Update Book' %>
  </div>
  
<% end %></div>

<div class="action">
  <%= link_to'Show', book_path(@book.id) %> | <%= link_to'Back',  '/books' %>
</div>