


<div class="form-box">
  <h2 class="heading">New Book</h2>
  
  <%= form_with model: @book do |f| %>
  <div class="title-box">
    <h4 class="title-form">Title</h4>
    <%= f.text_field:title %>
  </div>
  <div class="body-box">
    <h4 class="body-form">Body</h4>
    <%= f.text_area:body %>
  </div>
  <div class="submit">
    <%= f.submit'Create Book' %>
  </div>
  
  <% end %>

</div>


