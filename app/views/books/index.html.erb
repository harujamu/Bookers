<h1 class="heading">Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <tr>
   
    <% @books.each do |book| %>
    
   <td><span><%= book.title %></span></td>
   <td><span><%= book.body %></span></td>
   <td><%= link_to 'Show', "/books/#{book.id}" %></td>
   <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
   <td><%= link_to 'Destroy', destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    
    <% end %>
    
  </tr>
</table>

<h2>New Book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field:title %>
  <h4>Body</h4>
  <%= f.text_area:body %>
  <p><%= f.submit'Create Book' %></p>
<% end %>



