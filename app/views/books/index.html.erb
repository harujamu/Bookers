<div class="book-list">

<h1 class="heading">Books</h1>
<table>
  
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><span><%= book.title %></span></td>
    <td><span><%= book.body %></span></td>
    <td><%= link_to 'Show', "/books/#{book.id}" %></td>
    <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
    <td><%= link_to 'Destroy', destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
  </tr>
</table>
</div>    
  <% end %>
 
  <% if @book.errors.any? %>
  <div class="error">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>

  <h2 class="heading">New Book</h2>

<!--エラー-->  
    <div class="error-form-box">
    <%= form_with model: @book do |f| %>
      <div class="error-title-box">
      <h4 class="title-form">Title</h4>
      <%= f.text_field:title %>
      </div>
      <div class="error-body-box">
      <h4 class="error-body-form">Body</h4>
      <%= f.text_area:body %>
      </div>
      <div class="error-submit">
      <%= f.submit'Create Book' %>
    </div>
  
    <% end %>
  </div>
  
  <% else %>  
     <!--成功-->
  <div class="form-box">
  <%= form_with model: @book do |f| %>
    <div class="title-box">
      <h4 class="title-form">Title</h4>
      <%= f.text_field:title %>
    </div>
    <div class="body-box">
      <h4 class="body-form">Body</h4>
      <%= f.text_area:body %>
    </div>
    <div class="submit">
      <%= f.submit'Create Book' %>
    </div>
    <% end %>  
    
    
  <% end %>
   
  
   
   


</div>
