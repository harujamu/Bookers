<div class="book-list">

<h1 class="heading">Books</h1>
<table>
  
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <tr>
   
    <% @books.each do |book| %>
    
   <td><span><%= book.title %></span></td>
   <td><span><%= book.body %></span></td>
   <td><%= link_to 'Show', "/books/#{book.id}" %></td>
   <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
   <td><%= link_to 'Destroy', destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    
    <% end %>
    
  </tr>
</table>
</div>


<div class="form-box">
  <h2 class="heading">New Book</h2>
  
  <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
    <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
  <% end %>
  
  
  <%= form_with model: @book do |f| %>
  <div class="title-box">
    <h4 class="title-form">Title</h4>
    <%= f.text_field:title %>
  </div>
  <div class="body-box">
    <h4 class="body-form">Body</h4>
    <%= f.text_area:body %>
  </div>
  <div class="submit">
    <%= f.submit'Create Book' %>
  </div>
  
  <% end %>

</div>

